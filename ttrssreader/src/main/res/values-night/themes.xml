<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp" parent="Theme.Base.MyApp" />

    <style name="Theme.Base.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/themeDarkPrimary</item>
        <item name="colorPrimaryDark">@color/themeDarkPrimaryDark</item>
        <item name="colorAccent">@color/themeDarkAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/themeDarkAccent</item>
        <item name="colorAccentDark">@color/themeDarkAccentDark</item>
        <item name="colorBackground">@color/themeDarkBackground</item>
        <item name="android:textColorPrimary">@color/themeDarkTextColorPrimary</item>
        <item name="android:textColor">@color/themeDarkTextColor</item>

        <!-- Window settings -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Overall background -->
        <item name="android:windowBackground">?colorBackground</item>

        <!-- Color for Navigation-Buttons in ArticleView -->
        <item name="htmlHeaderBackgound">@color/themeDarkHtmlHeaderBackgound</item>
        <!-- Theme for preferences -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- Attempt at fixing https://github.com/nilsbraden/ttrss-reader-fork/issues/425 -->
        <item name="actionMenuTextColor">@color/themeDarkTextColor</item>
        <item name="android:actionMenuTextColor">@color/themeDarkTextColor</item>
    </style>

    <style name="Theme.MyApp.Black" parent="Theme.MyApp">
        <item name="colorAccent">@color/themeBlackAccent</item>
        <item name="colorBackground">@color/themeBlackBackground</item>
    </style>

</resources>
