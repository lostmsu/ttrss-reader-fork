<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyApp" parent="Theme.Base.MyApp" />

    <style name="Theme.Base.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/themeLightPrimary</item>
        <item name="colorPrimaryDark">@color/themeLightPrimaryDark</item>
        <item name="colorAccent">@color/themeLightAccent</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/themeLightAccent</item>
        <item name="colorAccentDark">@color/themeLightAccentDark</item>
        <item name="colorBackground">@color/themeLightBackground</item>
        <item name="android:textColorPrimary">@color/themeLightTextColorPrimary</item>
        <item name="android:textColor">@color/themeLightTextColor</item>

        <!-- Window settings -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Overall background -->
        <item name="android:windowBackground">?colorBackground</item>

        <!-- Color for Navigation-Buttons in ArticleView -->
        <item name="htmlHeaderBackgound">@color/themeLightHtmlHeaderBackgound</item>
        <!-- Theme for preferences -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- Attempt at fixing https://github.com/nilsbraden/ttrss-reader-fork/issues/425 -->
        <item name="actionMenuTextColor">@color/themeLightTextColor</item>
        <item name="android:actionMenuTextColor">@color/themeLightTextColor</item>

    </style>

    <style name="Theme.MyApp.White" parent="Theme.MyApp">
        <item name="colorAccent">@color/themeWhiteAccent</item>
        <item name="colorBackground">@color/themeWhiteBackground</item>
    </style>

</resources>
